#! /bin/sh

name=vte
version=0.80.3
revision=5
git_url="https://gitlab.gnome.org/GNOME/vte.git"
commit=02eaf1997d904dbfb792e2ae9ae0ba8b82f117f1
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs fast_float gnutls gtk3 cairo fribidi glib2 icu pango pcre2 lz4 libxml2"

configure() {
    meson_configure \
        -Da11y=true \
        -Ddebug=false \
        -Ddocs=false \
        -Dgir=false \
        -Dfribidi=true \
        -Dglade=true \
        -Dgnutls=true \
        -Dgtk3=true \
        -Dgtk4=false \
        -Dicu=true \
        -D_systemd=false \
        -Dvapi=false
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
