name=cxxshim
from_source=cxxshim
revision=1
imagedeps="meson ninja git base-devel"

configure() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --includedir=share/cxxshim/include \
        -Dinstall_headers=true \
        ${source_dir}
}

build() {
    ninja
}

install() {
    DESTDIR="${dest_dir}" ninja install
}
