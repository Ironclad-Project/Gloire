#! /bin/sh

name=memtest86+
from_source=memtest86+
revision=1
hostdeps="gcc"
imagedeps="nasm build-essential mtools dosfstools xorriso"

build() {
    if [ "${JINX_ARCH}" != "x86_64" ]; then
        return
    fi

    cp -rp ${source_dir}/. ./

    cd build64
    make -j${parallelism}
}

package() {
    if [ "${JINX_ARCH}" != "x86_64" ]; then
        return
    fi

    cd build64
    mkdir -p "${dest_dir}"/boot
    cp memtest.bin "${dest_dir}"/boot/
    cp memtest.efi "${dest_dir}"/boot/

        strip_command=strip \
    post_package_strip
}
