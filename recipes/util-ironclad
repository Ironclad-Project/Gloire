#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=7
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=99af4a2b79f9404f705cc44f8caea8d1bd6eeef8
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
