name=tar
from_source=tar
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc libgcc libstdc++ libxcrypt"

build() {
    cp -rp "${source_dir}"/. ./

    ./configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
