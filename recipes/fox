#! /bin/sh

name=fox
repology_id=fox-toolkit
version=1.7.81
revision=1
tarball_url="http://fox-toolkit.org/ftp/fox-${version}.tar.gz"
tarball_blake2b="2ceb3677639f4a186c65b5424d7322202122b837fc8d9bc93843dff2a89998bf8e9950d6f8a19cf5d9689630c89d2a0504a7ed54b091912d0a4d3e732d3ecf79"
hostdeps="gcc pkg-config"
deps="core-libs libx11 libxft libxext freetype2 glu"

prepare() {
    autotools_recursive_regen
}

configure() {
        PKG_CONFIG=${OS_TRIPLET}-pkg-config \
    autotools_configure
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
