#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=47
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=0260c330c761e8db952b18f583f7da6fc5632894
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
