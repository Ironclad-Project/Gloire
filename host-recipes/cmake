name=cmake
from_source=cmake
revision=1
imagedeps="gcc"

configure() {
    "${source_dir}"/configure --prefix="${prefix}" --parallel="${parallelism}"
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
    echo 'include(Platform/UnixPaths)' > "${dest_dir}${prefix}/share/cmake-3.26/Modules/Platform/Ironclad.cmake"
}
