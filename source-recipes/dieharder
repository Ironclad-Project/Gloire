name=dieharder
version=3.31.2
source_method=tarball
tarball_url="https://github.com/christopherkobayashi/dieharder/archive/refs/tags/${version}.tar.gz"
tarball_blake2b="6584fd10b723d8083918d474ce00c9bb387e29ff04d21be41779f297d850d688aedf9e675c18a543f8b0babafe7828049c36b13a112ba64abe205d262bb89efb"
hostdeps="automake autoconf libtool pkg-config"

regenerate() {
    libtoolize -cfvi && autoreconf -fvi
    (cd libdieharder && libtoolize -cfvi && autoreconf -fvi)
    (cd dieharder    && libtoolize -cfvi && autoreconf -fvi)
    (cd manual       && libtoolize -cfvi && autoreconf -fvi)
}
