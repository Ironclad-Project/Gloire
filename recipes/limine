#! /bin/sh

name=limine
version=10.2.1
revision=1
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="1dd651a9ea7fe2c06fe20244404e9969d146b415df120d3fa4bd13d9379d1ce8cfdced6ba02120e360d49d8c3de94473b65bdf83c832b35cd6cd0d34f4ec3473"
imagedeps="mtools nasm"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    if [ "${JINX_ARCH}" = "x86_64" ]; then
        X86_FLAGS="--enable-bios \
                   --enable-bios-cd \
                   --enable-bios-pxe \
                   --enable-uefi-ia32 \
        "
    fi

    autotools_configure \
        $X86_FLAGS \
        --enable-uefi-${JINX_ARCH} \
        --enable-uefi-cd \
        TOOLCHAIN_FOR_TARGET=${OS_TRIPLET}-
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
