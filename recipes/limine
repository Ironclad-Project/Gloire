#! /bin/sh

name=limine
version=10.0.0
revision=1
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="2924366dcd61d79654ec26159e20b7f2efcf02c1dcfadf619325174761c278d6098958db4c4950e04736ebb223013a16a09af75c1990d9a3f94a0bb48cf7b84c"
imagedeps="mtools nasm"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    if [ "${JINX_ARCH}" = "x86_64" ]; then
        X86_FLAGS="--enable-bios \
                   --enable-bios-cd \
                   --enable-bios-pxe \
                   --enable-uefi-ia32 \
        "
    fi

    autotools_configure \
        $X86_FLAGS \
        --enable-uefi-${JINX_ARCH} \
        --enable-uefi-cd \
        TOOLCHAIN_FOR_TARGET=${OS_TRIPLET}-
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
