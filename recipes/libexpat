name=libexpat
from_source=libexpat
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

configure() {
    ${source_dir}/configure     \
        --host=${OS_TRIPLET}           \
        --prefix=${prefix}            \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static              \
        --without-xmlwf
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
