#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=9
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=63216227cd59cc88086218fe74c77ab8ca1d99d7
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
