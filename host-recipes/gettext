name=gettext
from_source=gettext
revision=1
imagedeps="gcc"

build() {
    cp -rpv "${source_dir}"/. ./

        ACLOCAL=true \
        AUTOCONF=true \
        AUTOMAKE=true \
        AUTOHEADER=true \
    ./configure --prefix="${prefix}"

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

        strip_command=strip \
    post_package_strip
}
