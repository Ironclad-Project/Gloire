name=ironclad
from_source=ironclad
revision=1
imagedeps="gcc-ada texinfo"
hostdeps="gprbuild"

configure() {
    "${source_dir}"/configure --prefix="${prefix}" --target=x86_64-multiboot2-elf
}

build() {
    make all docs -j${parallelism}
}

install() {
    DESTDIR=${dest_dir} make install install-docs
}
