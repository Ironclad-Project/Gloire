#! /bin/sh

name=libgcrypt
version=1.11.2
revision=1
tarball_url="https://www.gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-${version}.tar.gz"
tarball_blake2b="ac605bba888aeb5e9683c9befad77bb176bd27c5a8df86f2202f92f18e71744dd136594f5cc8343df15da004e507bf4cb6ff1e51d8be477e332f4e78d9bc8ed0"
imagedeps="build-essential libgpg-error-dev"
hostdeps="gcc pkg-config"
deps="core-libs libgpg-error"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --with-libgpg-error-prefix="${sysroot_dir}${prefix}"
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
