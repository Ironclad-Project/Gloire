name=gsl
from_source=gsl
revision=1
hostdeps="gcc automake autoconf"
deps="mlibc"

configure() {
    ${source_dir}/configure    \
        --host=x86_64-ironclad \
        --prefix=${prefix}     \
        CFLAGS="-DSLOW_BUT_NO_HACKS -Wno-error -O2 -pipe"
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
