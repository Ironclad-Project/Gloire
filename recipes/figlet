name=figlet
from_source=figlet
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp"

configure() {
    cp -rp "${source_dir}"/. ./
}

build() {
    make CC=x86_64-ironclad-gcc LD=x86_64-ironclad-gcc -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
