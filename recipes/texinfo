name=texinfo
from_source=texinfo
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs ncurses bash gzip"
imagedeps="gcc perl help2man"

configure() {
    cp -rp "${source_dir}"/. ./
    ./configure                \
        --host=${OS_TRIPLET} \
        --prefix=${prefix}     \
        --sysconfdir=/etc      \
        --localstatedir=/var
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
