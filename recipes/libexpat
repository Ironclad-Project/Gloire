#! /bin/sh

name=libexpat
repology_id=expat
version=2.7.2
revision=1
git_url="https://github.com/libexpat/libexpat.git"
commit=7643f96bd5b9f5d3b26ea112519e05e17ef91cfb
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
        cmake_source_dir="${source_dir}/expat" \
    cmake_configure
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
