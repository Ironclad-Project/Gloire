#! /bin/sh

name=limine
version=10.3.1
revision=2
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="0abfd79521f708bb7c6634c5b8957d7d13a154348414cad991baecc5c7244cd4d1c7a9dd7ccc10811ca00606acdfe73f3db9c0cab6851beebb206a301ca00703"
imagedeps="mtools nasm llvm lld clang"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --enable-all
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
