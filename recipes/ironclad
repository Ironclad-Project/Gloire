#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=45
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=087aa3175c09641767382f48d4784fabb506c5ec
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
