#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=50
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=44a3f5a9d7faf41c0333006244fc7eee1c4fa21b
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
