name=util-ironclad
from_source=util-ironclad
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

configure() {
    "${source_dir}"/configure \
      --prefix="${prefix}"    \
      --sysconfdir=/etc       \
      --localstatedir=/var    \
      --host=${OS_TRIPLET}
}

build() {
    make -j${parallelism}
}

install() {
    make install DESTDIR="${dest_dir}"
}
