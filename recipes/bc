name=bc
from_source=bc
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp readline"

build() {
    cp -rp "${source_dir}"/. ./

    CC="x86_64-ironclad-gcc" HOSTCC="gcc" PREFIX="${prefix}" ./configure.sh

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" PREFIX="${prefix}" make install

    post_package_strip
}
