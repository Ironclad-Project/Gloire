#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=15
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=d0dc36fcf6ee5419bfffe98ecc31510b0f983c58
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
