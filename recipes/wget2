name=wget2
from_source=wget2
revision=1
hostdeps="gcc pkg-config automake autoconf libtool"
deps="core-libs openssl pcre2"

build() {
    ${source_dir}/configure           \
        --host=${OS_TRIPLET}        \
        --prefix=${prefix}            \
        --sysconfdir=/etc \
        --localstatedir=/var

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
