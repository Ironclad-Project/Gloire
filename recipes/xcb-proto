name=xcb-proto
from_source=xcb-proto
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-util-macros xorg-proto libxau libxdmcp"
imagedeps="python3"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-iroclad         \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
