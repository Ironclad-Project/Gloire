#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=12
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=9049c635cd33776006b6a2676b9fc4af1116e7a4
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
