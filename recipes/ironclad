#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=43
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=290106c58d23758fbf68b9d59da5d7336e549eb5
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
