name=ed
from_source=ed
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp readline"

configure() {
    cp -rp "${source_dir}"/. ./

    CC="x86_64-ironclad-gcc" ./configure
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
