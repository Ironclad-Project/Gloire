#! /bin/sh

name=vte
version=0.80.2
revision=1
git_url="https://gitlab.gnome.org/GNOME/vte.git"
commit=a33d089c1d2b669ee932df9a8b29236934102aad
imagedeps="meson ninja-build libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs fast_float gtk3 cairo fribidi glib2 icu pango pcre2 lz4 libxml2"

configure() {
    meson_configure \
        -Da11y=true \
        -Ddebug=false \
        -Ddocs=false \
        -Dgir=false \
        -Dfribidi=true \
        -Dglade=true \
        -Dgnutls=false \
        -Dgtk3=true \
        -Dgtk4=false \
        -Dicu=true \
        -D_systemd=false \
        -Dvapi=false
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
