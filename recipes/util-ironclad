#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=1
git_url="https://codeberg.org/Ironclad/util-ironclad"
commit=17bd72fc4f19a500db58eaa31dc6f20ae98946c9
source_hostdeps="automake autoconf pkg-config"
source_imagedeps="git"
hostdeps="gcc autoconf automake pkg-config"
deps="core-libs libxcrypt"

prepare() {
    ./bootstrap

    autotools_recursive_regen
}

configure() {
    autotools_configure
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
