#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=10
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=e874eac7146d3af9e9d16260457716b9f96192b3
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
