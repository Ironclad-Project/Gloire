#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=48
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=be48dbb975b53bf730f2ed5f4708030132285f1a
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
