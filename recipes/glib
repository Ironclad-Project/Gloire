name=glib
from_source=glib
revision=1
hostdeps="gcc pkg-config"
deps="core-libs pcre2 libffi zlib"
imagedeps="meson ninja"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dxattr=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
