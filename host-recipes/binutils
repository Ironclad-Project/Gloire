name=binutils
from_source=binutils
revision=1
imagedeps="gcc bison flex"
hostdeps="automake"

configure() {
    "${source_dir}"/configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}" --target=x86_64-ironclad --with-sysroot="${sysroot_dir}" --disable-werror
}

build() {
    make -j${parallelism} all-binutils all-gas all-ld
}

install() {
    DESTDIR="${dest_dir}" make install-strip-binutils install-strip-gas install-strip-ld
}
