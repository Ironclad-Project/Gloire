name=memtest86+
from_source=memtest86+
revision=1
hostdeps="gcc"
imagedeps="nasm gcc mtools dosfstools xorriso git"

configure() {
    cp -rp ${source_dir}/. ./
}

build() {
    cd build64
    make -j${parallelism}
}

install() {
    cd build64
    mkdir -p "${dest_dir}"/boot
    cp memtest.bin "${dest_dir}"/boot/
    cp memtest.efi "${dest_dir}"/boot/
}
