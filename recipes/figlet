name=figlet
from_source=figlet
revision=1
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    cp -rp "${source_dir}"/. ./
}

build() {
    make CC=${OS_TRIPLET}-gcc CFLAGS="${CFLAGS}" LD=${OS_TRIPLET}-gcc prefix="${prefix}" -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install prefix="${prefix}"
}
