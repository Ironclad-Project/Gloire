#!/bin/sh

# Source /etc/os-release for some variables.
source /etc/os-release

# Colors for printing and the color bar.
lm="\e[${ANSI_COLOR}m"
rt='\e[0m'
bar1='\e[40m   \e[41m   \e[42m   \e[43m   \e[44m   \e[45m   \e[46m   \e[47m   '
bar2='\e[100m   \e[101m   \e[102m   \e[103m   \e[104m   \e[105m   \e[106m   \e[107m   '

# Data.
kernel=$(uname -srm)
packages="69 (jinx)"
memory_usage="$(showmem -u)MiB / $(showmem -t)MiB"

printf "                                         \n"
printf "                  &#BGPPPPPG#&           \n"
printf "               B5?77!!?YJJ7!7YBB&        \n"
printf "            &G5YJ77!7JYYYYYBPJ&PY#       $lm $USER$rt@$lm$HOSTNAME$rt\n"
printf "          #PYYYYYY?!?YYYYY7?7JP5JJ       $lm OS$rt:       $PRETTY_NAME\n"
printf "         B?YYYYYY7!!7JYYYYJ!!?JJJ5       $lm Kernel$rt:   $kernel\n"
printf "  &&    B7?J?77?7!!!!!77777!7Y5YYBBPGGG& $lm Packages$rt: $packages\n"
printf " G77?YBB!!!!!!!!!!!!!JYJ??7JYJJY# PYPPG& $lm Shell$rt:    $BASH $BASH_VERSION\n"
printf " J777JB?!7JJ???!!!7?JYYYYYPJ!7JB         $lm Memory$rt:   $memory_usage\n"
printf " GYYG #JJJJJ??7!!!JYYY5PGB&GB&           \n"
printf "    #Y!?GB5YYJY5PG###&                   $lm $bar1$rt\n"
printf "    GJJP                                 $lm $bar2$rt\n"
printf "                                         \n"
