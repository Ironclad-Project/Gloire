#! /bin/sh

name=libxml2
version=2.15.0
revision=1
git_url="https://gitlab.gnome.org/GNOME/libxml2.git"
commit=0bea77c8289324483c0504d36ac730bb03f6a70b
hostdeps="gcc pkg-config"
deps="core-libs icu readline zlib"

configure() {
    meson_configure \
        -Dpython=disabled \
        -Dhistory=enabled \
        -Dicu=enabled \
        -Dreadline=enabled \
        -Dzlib=enabled
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
