name=coreutils
from_source=coreutils
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs tzdata"
imagedeps="gcc gperf"

configure() {
    cp -rp "${source_dir}"/. ./

        CFLAGS="-DSLOW_BUT_NO_HACKS $CFLAGS" \
    ./configure    \
        --host=${OS_TRIPLET}    \
        --prefix=${prefix}     \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
