name=gwm
from_source=gwm
revision=1
hostdeps="gcc binutils"
deps="core-libs"
imagedeps="binutils"

configure() {
    true
}

build() {
    cd ${source_dir}
    make -j${parallelism} CC=x86_64-ironclad-gcc
}

install() {
    cd ${source_dir}
    make install PREFIX="${prefix}" DESTDIR="${dest_dir}"
}
