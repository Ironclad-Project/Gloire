#! /bin/sh

name=libxml2
version=2.14.5
revision=1
git_url="https://gitlab.gnome.org/GNOME/libxml2.git"
commit=74f3154320df8950eceae4951975cc9dfc3a254d
hostdeps="gcc pkg-config"
deps="core-libs icu readline zlib"

configure() {
    meson_configure \
        -Dpython=disabled \
        -Dhistory=enabled \
        -Dicu=enabled \
        -Dreadline=enabled \
        -Dzlib=enabled
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
