#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=8
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=5e5b6217a102fa41d9e7f3c78f65c51defab155d
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
