#! /bin/sh

name=limine
version=10.6.0
revision=1
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="10feef2b05ae05803e8927fa1b7f839d68c186e34ee8a52c4c42eed4e40ee0c6f03684462017816109d967fa759d11dca00653039ece52c14c2df9c06fc9610a"
imagedeps="mtools nasm llvm lld clang"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --enable-all
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
