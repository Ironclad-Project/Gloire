#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=42
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=dba28d7bc16ccd053a296b1d5f19ef561fb135f8
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
