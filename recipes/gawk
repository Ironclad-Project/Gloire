name=gawk
from_source=gawk
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp"

configure() {
    cp -rp "${source_dir}"/. ./

    ./configure \
        --host=x86_64-ironclad \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
