name=mlibc-headers
revision=1
from_source=mlibc
imagedeps="meson ninja-build"
hostdeps="pkg-config"

configure() {
    meson_configure \
        -Dheaders_only=true \
        -Ddisable_crypt_option=true \
        -Ddisable_iconv_option=true \
        -Ddisable_intl_option=true
}

build() {
    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install
}
