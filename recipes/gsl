name=gsl
from_source=gsl
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs"

build() {
    ${source_dir}/configure    \
        --host=${OS_TRIPLET} \
        --sysconfdir=/etc      \
        --localstatedir=/var   \
        --prefix=${prefix}

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
