 static enum nir_spirv_debug_level
diff --git a/src/egl/main/egllog.c b/src/egl/main/egllog.c
index 984dd5b..6a91952 100644
--- a/src/egl/main/egllog.c
+++ b/src/egl/main/egllog.c
@@ -39,6 +39,7 @@
 #include <stdio.h>
