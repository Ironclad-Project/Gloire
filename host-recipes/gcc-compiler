name=gcc-compiler
from_source=gcc
revision=1
imagedeps="gcc flex bison g++"
hostdeps="automake autoconf"
hostrundeps="binutils"
deps="mlibc-headers"

configure() {
    "${source_dir}"/configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}" --target=x86_64-ironclad --with-sysroot="${sysroot_dir}" --enable-languages=c,c++ --disable-multilib --enable-initfini-array
}

build() {
    make -j${parallelism} all-gcc
}

install() {
    DESTDIR="${dest_dir}" make install-gcc
}
