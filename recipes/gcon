name=gcon
from_source=gcon
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

build() {
    "${source_dir}"/configure \
      --prefix="${prefix}"    \
      --sysconfdir=/etc       \
      --localstatedir=/var    \
      --host=${OS_TRIPLET}

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"
}
