#! /bin/sh

name=limine
version=10.5.0
revision=1
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="5dc6067646feeda664b2ac1689fa5ef1782e964810bdc79c79f039d5ac619e71367abcd8e88fb5f1bd8330010f233f8d892956d783914dda0ee73e682dc1acce"
imagedeps="mtools nasm llvm lld clang"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --enable-all
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
