name=epoch
from_source=epoch
revision=1
hostdeps="gcc autoconf automake libtool"
deps="core-libs"

build() {
    cp -rp ${source_dir}/. ./

    make CC=${OS_TRIPLET}-gcc CFLAGS="-DNO_EXECINFO ${CFLAGS}"
}

package() {
    mkdir -p "${dest_dir}${prefix}"/bin
    cp -r built/sbin/* "${dest_dir}${prefix}"/bin/
    cp -r built/bin/*  "${dest_dir}${prefix}"/bin/

    post_package_strip
}
