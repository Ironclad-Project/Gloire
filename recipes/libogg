#! /bin/sh

name=libogg
version=1.3.6
revision=2
git_url="https://github.com/xiph/ogg.git"
commit=be05b13e98b048f0b5a0f5fa8ce514d56db5f822
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    cmake_configure
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
