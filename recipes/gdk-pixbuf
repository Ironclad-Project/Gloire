#! /bin/sh

name=gdk-pixbuf
version=2.44.2
revision=1
git_url="https://gitlab.gnome.org/GNOME/gdk-pixbuf.git"
commit=f964c322d7dfefc3f03e43c6ae3b35ecfe01721c
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs glib2 libjpeg-turbo libpng libx11 libtiff"

configure() {
    meson_configure \
        -Dgio_sniffing=false \
        -Dman=false
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
