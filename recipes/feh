#! /bin/sh

name=feh
version=3.11.2
revision=1
tarball_url="https://feh.finalrewind.org/feh-${version}.tar.bz2"
tarball_blake2b="12fc2d5034b39dbdaf54c09f42815ac48843359f3b114f66bbdf115fc85b97a494c6c3f38d26bd047651c959b0694fc966426e80aed6c6eacdd8c7cd5a66ff91"
hostdeps="gcc pkg-config"
deps="core-libs libx11 libxt libpng imlib2"

build() {
    cp -rp "${source_dir}"/. ./
        CC=${OS_TRIPLET}-gcc \
        CFLAGS="${TARGET_CFLAGS}" \
        LDFLAGS="${TARGET_LDFLAGS}" \
    make \
        PREFIX="${prefix}" \
        curl=0 \
        xinerama=0 \
        -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" PREFIX="${prefix}" make install

    post_package_strip
}
