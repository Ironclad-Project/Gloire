name=bc
from_source=bc
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp readline"

configure() {
    cp -rp "${source_dir}"/. ./

    CC="x86_64-ironclad-gcc" HOSTCC="gcc" ./configure.sh
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
