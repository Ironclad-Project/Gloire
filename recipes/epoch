name=epoch
from_source=epoch
revision=1
hostdeps="gcc autoconf automake libtool"
deps="mlibc"

configure() {
    true
}

build() {
    make -C ${source_dir} CC=x86_64-ironclad-gcc CFLAGS="${common_cflags}"
}

install() {
    cp -r ${source_dir}/built/* "${dest_dir}"
    mkdir -p "${licenses_dir}"/epoch
    cp "${source_dir}"/README        "${licenses_dir}"/epoch/
    cp "${source_dir}"/UNLICENSE.TXT "${licenses_dir}"/epoch/
}
