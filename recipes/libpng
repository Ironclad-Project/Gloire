#! /bin/sh

name=libpng
version=1.6.53
revision=1
git_url="https://github.com/pnggroup/libpng.git"
commit=4e3f57d50f552841550a36eabbb3fbcecacb7750
hostdeps="gcc pkg-config"
deps="core-libs zlib"

configure() {
    cmake_configure \
        -DPNG_STATIC=OFF \
        -DPNG_TESTS=OFF
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
