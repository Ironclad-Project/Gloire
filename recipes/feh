#! /bin/sh

name=feh
version=3.11
revision=1
tarball_url="https://feh.finalrewind.org/feh-${version}.tar.bz2"
tarball_blake2b="736f912a6a96c484f49d9bc8ea2ee7bb0ffb1d2588b09565316e90ea686ae7c20bdd6117426ef3ba467fa62c5f31e04224c21af380a18cf53218b4367e5d5529"
hostdeps="gcc pkg-config"
deps="core-libs libx11 libxt libpng imlib2"

build() {
    cp -rp "${source_dir}"/. ./
        CC=${OS_TRIPLET}-gcc \
        CFLAGS="${TARGET_CFLAGS}" \
        LDFLAGS="${TARGET_LDFLAGS}" \
    make \
        PREFIX="${prefix}" \
        curl=0 \
        xinerama=0 \
        -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" PREFIX="${prefix}" make install

    post_package_strip
}
