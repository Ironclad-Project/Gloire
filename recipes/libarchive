#! /bin/sh

name=libarchive
version=3.8.2
revision=1
git_url="https://github.com/libarchive/libarchive.git"
commit=7f53fce04e4e672230f4eb80b219af17975e4f83
hostdeps="gcc pkg-config"
deps="core-libs bzip2 libexpat libxml2 xz zlib zstd"

configure() {
    cmake_configure
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    # Remove static libraries
    rm -v "${dest_dir}${prefix}/lib/libarchive.a"

    post_package_strip
}
