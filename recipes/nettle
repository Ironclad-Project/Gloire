name=nettle
from_source=nettle
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs gmp"
imagedeps="gcc"

build() {
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-documentation \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
