#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=16
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=27903f5b7aca326583ea0da3ae9a891bfeeb3c91
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
