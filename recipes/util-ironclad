#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=13
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=d4c66b22aee18df88c60b0b97485162a4f763a6d
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
