#! /bin/sh

name=gsettings-desktop-schemas
version=49.0
revision=1
git_url="https://gitlab.gnome.org/GNOME/gsettings-desktop-schemas.git"
commit=d3559010b4eddec3df9cdb9ea738c03e9e6800fe
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs glib2"

prepare() {
    sed -i -r 's:"(/system):"/org/gnome\1:g' schemas/*.in
}

configure() {
    meson_configure \
        -Dintrospection=false
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    glib-compile-schemas "${dest_dir}${prefix}"/share/glib-2.0/schemas
    rm "${dest_dir}${prefix}"/share/glib-2.0/schemas/gschemas.compiled

    post_package_strip
}
