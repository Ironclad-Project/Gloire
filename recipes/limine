#! /bin/sh

name=limine
version=10.3.2
revision=1
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="11980b21b44eb1f64be165ba2bd8fe0e22e79800e76d7fdfaf40714a5ce2e20d99b3d80795fcfb26e663ef3b4a8a8a4a26011a51ddac76d3d975feb5da7c7735"
imagedeps="mtools nasm llvm lld clang"
hostdeps="gcc pkg-config"
deps="core-libs"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --enable-all
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
