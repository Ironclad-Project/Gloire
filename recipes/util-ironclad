#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=11
git_url="https://codeberg.org/Ironclad/util-ironclad.git"
commit=9b1a793ada7aa7a701846e58198ead0b001dd1c0
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
