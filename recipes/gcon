#! /bin/sh

name=gcon
skip_pkg_check=yes
version=0.0git
revision=12
git_url="https://codeberg.org/Ironclad/gcon.git"
commit=fbd14d033398290f343528857f6f25804d5ae11c
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    meson subprojects download
}

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
