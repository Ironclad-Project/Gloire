#! /bin/sh

name=gcon
skip_pkg_check=yes
version=0.0git
revision=11
git_url="https://codeberg.org/Ironclad/gcon.git"
commit=0184b348206b633b2d88673dd87d6b5f55f9a132
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    meson subprojects download
}

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild
}
