#! /bin/sh

name=curl
version=8.15.0
revision=1
tarball_url="https://curl.se/download/curl-${version}.tar.xz"
tarball_blake2b="ae809be87f34d079413129c27e618a6d15c2bf9087fd7e679cefe9b6d8645f0dd092e8c3e1f62b7bd0dffdd0b77e0bc5ac031ffce4e50060ec20b280618c8e68"
hostdeps="gcc pkg-config"
deps="core-libs openssl zlib zstd libpsl libidn2"

configure() {
    cmake_configure \
        -DENABLE_THREADED_RESOLVER=ON \
        -DCURL_USE_OPENSSL=ON
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
