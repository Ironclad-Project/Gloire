#! /bin/sh

name=util-ironclad
skip_pkg_check=yes
version=0.0git
revision=3
git_url="https://codeberg.org/Ironclad/util-ironclad"
commit=93f09a65120f59d500d02c49bb4bcef74ea2f438
source_hostdeps="automake autoconf pkg-config"
source_imagedeps="git"
hostdeps="gcc autoconf automake pkg-config"
deps="core-libs libxcrypt"

prepare() {
    ./bootstrap
}

configure() {
    autotools_configure
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
