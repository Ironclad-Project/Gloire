name=epoch
from_source=epoch
revision=1
hostdeps="gcc autoconf automake libtool"
deps="core-libs"

configure() {
    cp -rp ${source_dir}/. ./
}

build() {
    make CC=x86_64-ironclad-gcc CFLAGS="-DNO_EXECINFO ${common_cflags}"
}

install() {
    mkdir -p "${dest_dir}${prefix}"/bin
    cp -r built/sbin/* "${dest_dir}${prefix}"/bin/
    cp -r built/bin/*  "${dest_dir}${prefix}"/bin/
}
