#! /bin/sh

name=libtiff
repology_id=tiff
version=4.7.1
revision=2
git_url="https://gitlab.com/libtiff/libtiff.git"
commit=5fe20d0e9aba49a6a350ed533459d1505203838f
hostdeps="gcc pkg-config"
deps="core-libs freeglut libjpeg-turbo zlib zstd xz"

configure() {
    cmake_configure
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
