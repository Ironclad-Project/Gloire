#! /bin/sh

name=gcon
version=7ec045bb319125082408c1cad3b593d066a8e2c2
revision=1
tarball_url="https://github.com/streaksu/gcon/archive/${version}.tar.gz"
tarball_blake2b="08aac83403c5bc9e95ed08f1994046b9dbffc9685797e2f3f4b12ab21fd9244582c7263ca86f00ee01c886ee68602c34170a9c54100c603aba6aecdd1c2f1202"
source_imagedeps="git"
source_hostdeps="automake autoconf libtool pkg-config"
source_allow_network="yes"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

prepare() {
    ./bootstrap
}

configure() {
    autotools_configure
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
