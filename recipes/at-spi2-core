#! /bin/sh

name=at-spi2-core
version=2.58.0
revision=1
tarball_url="https://gitlab.gnome.org/GNOME/at-spi2-core/-/archive/${version}/at-spi2-core-${version}.tar.gz"
tarball_blake2b="0a84a53e268c508c4307460e262a684b825cb40eba600759ff7f1becaadbed977d165a5fb76cd5830d07692f9b091c71625f13308860aa431e62719ef0839203"
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs bash dbus glib2 gsettings-desktop-schemas libx11 libxi libxkbcommon libxml2 libxtst"

configure() {
    meson_configure \
        -Dsystemd_user_dir=/tmp \
        -Dintrospection=disabled
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
