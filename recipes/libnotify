#! /bin/sh

name=libnotify
version=0.8.7
revision=1
git_url="https://gitlab.gnome.org/GNOME/libnotify.git"
commit=1d9767a392cbac7e899e7ab80235cfceebd52731
imagedeps="meson ninja-build libglib2.0-dev docbook-xsl-ns"
hostdeps="gcc pkg-config"
deps="core-libs glib2 gtk3"

configure() {
    meson_configure \
        -Dgtk_doc=false \
        -Dtests=false \
        -Dintrospection=disabled
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
