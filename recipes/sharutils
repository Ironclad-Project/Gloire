name=sharutils
from_source=sharutils
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp readline"

build() {
    cp -rp "${source_dir}"/. ./

    CFLAGS+=' -fcommon'
    ./configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls \
        --disable-dependency-tracking

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
