name=libgcc
from_source=gcc
revision=1
imagedeps="gcc bison flex"
hostrundeps="gcc-compiler binutils"
deps="mlibc"

configure() {
    true
}

build() {
    # Hack to continue gcc build
    cd "${base_dir}"/host-builds/gcc-compiler
    make -j${parallelism} all-target-libgcc
}

install() {
    # Hack to continue gcc build
    cd "${base_dir}"/host-builds/gcc-compiler
    DESTDIR="${dest_dir}" make install-strip-target-libgcc
    rm "${dest_dir}${prefix}"/lib/gcc/x86_64-ironclad/12.2.0/crti.o
    rm "${dest_dir}${prefix}"/lib/gcc/x86_64-ironclad/12.2.0/crtn.o
}
