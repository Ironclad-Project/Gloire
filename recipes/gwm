name=gwm
from_source=gwm
revision=1
hostdeps="gcc binutils pkg-config"
deps="core-libs freetype libpng"
imagedeps="binutils"

build() {
    "${source_dir}"/configure \
      --prefix="${prefix}"    \
      --sysconfdir=/etc       \
      --localstatedir=/var    \
      --host=${OS_TRIPLET}

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"
}
