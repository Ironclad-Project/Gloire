#! /bin/sh

name=fontconfig
version=2.16.2
revision=1
git_url="https://gitlab.freedesktop.org/fontconfig/fontconfig.git"
commit=c1bdf4f542f56d3b5035ec2806ed7a685f831c1b
imagedeps="git meson ninja-build gperf"
hostdeps="gcc pkg-config"
deps="core-libs freetype2 libexpat libxml"

configure() {
    meson_configure \
        -Dxml-backend=libxml2
}

build() {
    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
