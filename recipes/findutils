name=findutils
from_source=findutils
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"
imagedeps="python"

configure() {
    cp -rp "${source_dir}"/. ./

    ./configure \
        --host=x86_64-ironclad \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls \
        --without-selinux
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
