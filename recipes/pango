#! /bin/sh

name=pango
version=1.57.0
revision=1
tarball_url="https://download.gnome.org/sources/pango/1.57/pango-${version}.tar.xz"
tarball_blake2b="b74cb272812132c83d3654a0f5b292639556c014adf6b917f3588f242f56804336cf9bf701e6b32469251315e454a50b88216412ba39204ee6c4440f83eaeeaa"
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs glib2 fontconfig freetype2 fribidi cairo libx11 harfbuzz libxft"

configure() {
    meson_configure \
        -Dintrospection=disabled
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
