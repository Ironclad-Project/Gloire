name=figlet
from_source=figlet
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs mpfr gmp"

configure() {
    cp -rp "${source_dir}"/. ./
}

build() {
    make CC=${OS_TRIPLET}-gcc LD=${OS_TRIPLET}-gcc -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
