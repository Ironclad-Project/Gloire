name=less
from_source=less
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs ncurses"

build() {
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix="${prefix}" \
        --sysconfdir=/etc \
        --localstatedir=/var

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"

    post_package_strip
}
