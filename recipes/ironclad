#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=34
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=e9d9bd5c4f6a02655a31d2f42b23284e387a8bc3
source_hostdeps="autoconf automake pkg-config"
imagedeps="texinfo gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
