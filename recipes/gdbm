#! /bin/sh

name=gdbm
version=1.26
revision=1
tarball_url="https://ftpmirror.gnu.org/gnu/gdbm/gdbm-${version}.tar.gz"
tarball_blake2b="9423ea16ee3e8f1ce57ea32371f49919e2a3819a206a61ce927676a08a71a6a495d3949714bff7be789dfce75bf0ab0ac76f07ec673b71a84ae32bd8cd483781"
hostdeps="gcc pkg-config"
deps="core-libs readline"

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure \
        --enable-libgdbm-compat
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
