name=gmp
from_source=gmp
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-ironclad           \
        --prefix=${prefix}            \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --enable-cxx                  \
        --disable-static              \
        --with-sysroot=${sysroot_dir}
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
