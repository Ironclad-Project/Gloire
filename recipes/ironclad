#! /bin/sh

name=ironclad
skip_pkg_check=yes
version=0.0git
revision=41
git_url="https://codeberg.org/Ironclad/Ironclad.git"
commit=479f2a9d972e66f6d47b895cecf8f7f8c9396b60
source_hostdeps="autoconf automake pkg-config"
imagedeps="gprbuild"
hostdeps="gcc pkg-config"
deps="core-libs"

early_prepare() {
    ./bootstrap
}

prepare() {
    autotools_recursive_regen
}

configure() {
    autotools_configure_noflags
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
