#! /bin/sh

name=simdutf
version=7.7.0
revision=1
git_url="https://github.com/simdutf/simdutf.git"
commit=94fb52ea0219cb37092d8ae294b4702bacf5d8df
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    cmake_configure \
        -DSIMDUTF_TESTS=OFF
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
