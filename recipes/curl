#! /bin/sh

name=curl
version=8.17.0
revision=2
git_url="https://github.com/curl/curl.git"
commit=400fffa90f30c7a2dc762fa33009d24851bd2016
hostdeps="gcc pkg-config"
deps="core-libs openssl zlib zstd libpsl libidn2 brotli nghttp2"

configure() {
    cmake_configure \
        -DENABLE_THREADED_RESOLVER=ON \
        -DCURL_USE_OPENSSL=ON
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
