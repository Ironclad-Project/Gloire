name=libpng
from_source=libpng
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc zlib"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-ironclad        \
        --prefix=${prefix}            \
        --disable-static
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
