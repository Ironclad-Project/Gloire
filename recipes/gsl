name=gsl
from_source=gsl
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs"

configure() {
    ${source_dir}/configure    \
        --host=x86_64-ironclad \
        --sysconfdir=/etc      \
        --localstatedir=/var   \
        --prefix=${prefix}
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
